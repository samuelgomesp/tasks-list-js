<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tasks List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <%- include('partials/header') %>
    <div class="container mt-5">
        <div id="page-tasks-title">
            <h1>Tasks List</h1>
        </div>
        
        <form id="form-create-task" action="/tasks/create" method="post" class="mb-3">
            <div class="input-group">
                <input id="title" type="text" name="title" class="form-control" placeholder="Insert Here the New task list...">
                <button class="btn btn-primary">Create</button>    
            </div>
        </form>
        
        <ul class="list-group list-group-flush">
            <% tasks.forEach(task => { %>
                <li class="list-group-item d-flex justify-content-between">
                    <a href="/tasks/<%= task.taskTitle  %>" class="link-light link-offset-2 link-offset-3-hover link-underline link-underline-opacity-0 link-underline-opacity-75-hover"><h2><%= task.taskTitle  %></h2></a>
                    <form id="form-task-delete" action="/tasks/delete/<%= task.taskTitle %>" method="post" >
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </li>
            <% }) %>
        </ul>
    </div>
    <%- include('partials/footer') %>
</body>
</html>